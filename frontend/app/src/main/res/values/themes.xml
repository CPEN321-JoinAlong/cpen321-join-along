<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JoinAlong" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_prim</item>
        <item name="colorPrimaryVariant">@color/orange_prim</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="backgroundColor">@color/white</item>
        <item name="defaultSubtitleTextColor">@color/light_default_subtitle_color</item>
        <item name="defaultTextColor">@color/black</item>
        <item name="defaultWhiteWhite">@color/white</item>
        <item name="defaultBlackBlack">@color/black</item>
        <item name="chipColor">@color/light_chip_color</item>
        <item name="tabColor">@color/light_tab_color</item>
        <item name="backgroundGradientStartColor">@color/light_gradient_start</item>
        <item name="backgroundGradientCenterColor">@color/light_gradient_center</item>
        <item name="defaultStrokeColor">@color/light_stroke_color</item>
        <item name="buttonColor">@color/light_button_color</item>
        <item name="contrastingGreys">@color/grey</item>

    </style>
</resources>